pipeline{
    agent any
    
    environment{
        PATH = "/opt/maven3/bin:$PATH"
    }
   
        stages{
        stage('Maven Build'){
            steps{
                sh script: 'mvn clean package'
            }
        }
        
         stage('Nexus Deploy'){
            steps{
                sh script: 'mvn deploy'
            }
        }
        
    }
}

